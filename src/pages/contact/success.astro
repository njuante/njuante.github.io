---
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';
---

<Layout title="Message Sent - Juan Teo" description="Thank you for your message! I'll get back to you soon.">
  <Navigation />
  
  <main class="pt-20">
    <section class="py-20 min-h-screen flex items-center justify-center bg-gradient-to-r from-green-50 to-blue-50 dark:from-gray-900 dark:to-green-900">
      <div class="container mx-auto px-6">
        <div class="max-w-2xl mx-auto text-center">
          <!-- Success Icon -->
          <div class="w-20 h-20 mx-auto mb-8 bg-green-100 dark:bg-green-900 rounded-full flex items-center justify-center">
            <svg class="w-10 h-10 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
          </div>
          
          <!-- Success Message -->
          <h1 class="text-4xl md:text-5xl font-bold mb-6 text-gray-900 dark:text-white">
            Message Sent!
          </h1>
          
          <p class="text-xl text-gray-600 dark:text-gray-300 mb-8 leading-relaxed">
            Thank you for reaching out! I've received your message and will get back to you as soon as possible, 
            usually within 24 hours.
          </p>
          
          <!-- Action Buttons -->
          <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
            <a 
              href="/" 
              class="bg-blue-600 hover:bg-blue-700 text-white px-8 py-3 rounded-lg font-medium transition-colors"
            >
              Back to Home
            </a>
            <a 
              href="/projects" 
              class="border border-blue-600 text-blue-600 dark:text-blue-400 hover:bg-blue-600 hover:text-white px-8 py-3 rounded-lg font-medium transition-colors"
            >
              View My Work
            </a>
          </div>
          
          <!-- Additional Info -->
          <div class="mt-12 p-6 bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700">
            <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-3">
              What happens next?
            </h2>
            <div class="text-left space-y-2 text-gray-600 dark:text-gray-400">
              <div class="flex items-center space-x-3">
                <div class="w-2 h-2 bg-blue-500 rounded-full"></div>
                <span>I'll review your message carefully</span>
              </div>
              <div class="flex items-center space-x-3">
                <div class="w-2 h-2 bg-blue-500 rounded-full"></div>
                <span>You'll receive a personal response from me</span>
              </div>
              <div class="flex items-center space-x-3">
                <div class="w-2 h-2 bg-blue-500 rounded-full"></div>
                <span>We can schedule a call if needed</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>
