---
const currentPath = Astro.url.pathname;
---

<header class="fixed top-0 left-0 right-0 z-50 bg-cyber-bg/90 backdrop-blur-md border-b border-cyber-primary/30 shadow-lg">
  <nav class="container mx-auto px-6 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <a href="/" class="text-2xl font-bold text-cyber-primary glow-text hover:text-cyber-secondary transition-all flex items-center gap-3">
        <span class="text-3xl">▲</span>
        <span class="terminal-text">cybersec.dev</span>
      </a>
      
      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        <a 
          href="/" 
          class={`nav-link ${
            currentPath === '/' ? 'active' : ''
          }`}
        >
          <span class="nav-icon">◉</span> Inicio
        </a>
        <a 
          href="/blog" 
          class={`nav-link ${
            currentPath.startsWith('/blog') ? 'active' : ''
          }`}
        >
          <span class="nav-icon">◉</span> Blog
        </a>
        <a 
          href="/contact" 
          class={`nav-link ${
            currentPath === '/contact' ? 'active' : ''
          }`}
        >
          <span class="nav-icon">◉</span> Contacto
        </a>
      </div>
      
      <!-- Mobile Menu Button -->
      <div class="md:hidden">
        <button 
          id="mobile-menu-toggle"
          class="text-cyber-primary hover:text-cyber-secondary transition-colors p-2"
          aria-label="Toggle mobile menu"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
    
    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4 border-t border-cyber-primary/30">
      <div class="flex flex-col space-y-4 pt-4">
        <a 
          href="/" 
          class={`nav-link-mobile ${
            currentPath === '/' ? 'active' : ''
          }`}
        >
          <span class="nav-icon">◉</span> Inicio
        </a>
        <a 
          href="/blog" 
          class={`nav-link-mobile ${
            currentPath.startsWith('/blog') ? 'active' : ''
          }`}
        >
          <span class="nav-icon">◉</span> Blog
        </a>
        <a 
          href="/contact" 
          class={`nav-link-mobile ${
            currentPath === '/contact' ? 'active' : ''
          }`}
        >
          <span class="nav-icon">◉</span> Contacto
        </a>
      </div>
    </div>
  </nav>
</header>

<style>
  .nav-link, .nav-link-mobile {
    position: relative;
    color: var(--cyber-text);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-size: 0.9rem;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .nav-link:hover, .nav-link-mobile:hover {
    color: var(--cyber-primary);
    text-shadow: 0 0 10px var(--glow-primary);
  }

  .nav-link.active, .nav-link-mobile.active {
    color: var(--cyber-primary);
    font-weight: 700;
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, var(--cyber-primary), var(--cyber-secondary));
    transition: width 0.3s ease;
    box-shadow: 0 0 10px var(--glow-primary);
  }

  .nav-link.active::after {
    width: 100%;
  }

  .nav-link:hover::after {
    width: 100%;
  }

  .nav-icon {
    font-size: 0.7rem;
    color: var(--cyber-primary);
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.5;
    }
  }

  .nav-link-mobile {
    padding: 0.5rem 0;
  }
</style>

<script>
  // Mobile menu toggle
  document.addEventListener('DOMContentLoaded', () => {
    const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
    const mobileMenu = document.getElementById('mobile-menu');
    
    if (mobileMenuToggle && mobileMenu) {
      mobileMenuToggle.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
      });
    }
  });
</script>
