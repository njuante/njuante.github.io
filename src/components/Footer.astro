    <!-- Bottom Section -->
    <div class="mt-8 pt-8 border-t border-cyber-primary/30">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        <p class="text-cyber-text-dim text-sm terminal-text">
          <span class="text-cyber-primary">$</span> © {currentYear} Juan Nuñez • Cybersecurity Student
        </p>
        <p class="text-cyber-text-dim text-sm">
          Built with <span class="text-cyber-accent">⚡</span> Astro & Tailwind CSS
        </p>
      </div>
      <div class="text-center mt-4">
        <p class="text-xs text-cyber-text-dim terminal-text">
          <span class="text-cyber-primary animate-pulse">►</span> "Hack the planet, learn every day" <span class="text-cyber-primary animate-pulse">◄</span>
        </p>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer-link {
    color: var(--cyber-text);
    font-size: 0.875rem;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .footer-link:hover {
    color: var(--cyber-primary);
    text-shadow: 0 0 10px var(--glow-primary);
    transform: translateX(5px);
  }

  .social-link {
    color: var(--cyber-text);
    transition: all 0.3s ease;
    padding: 0.5rem;
    border: 1px solid transparent;
    border-radius: 0.5rem;
  }

  .social-link:hover {
    color: var(--cyber-primary);
    border-color: var(--cyber-primary);
    box-shadow: 0 0 20px var(--glow-primary);
    transform: translateY(-3px);
  }
</style>
