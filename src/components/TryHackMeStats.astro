---
// TryHackMe API Integration Component
// Nota: Necesitarás tu username de TryHackMe para mostrar tus stats
const username = 'njuante'; // Cambia esto por tu usuario de TryHackMe
---

<div class="tryhackme-stats cyber-card rounded-xl p-6 mb-8">
  <div class="flex items-center justify-between mb-6">
    <h2 class="text-2xl font-bold text-cyber-primary glow-text flex items-center gap-3">
      <svg class="w-8 h-8" viewBox="0 0 24 24" fill="currentColor">
        <path d="M12 2L2 7v10c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V7l-10-5z"/>
      </svg>
      TryHackMe Progress
    </h2>
    <a 
      href={`https://tryhackme.com/p/${username}`}
      target="_blank"
      rel="noopener noreferrer"
      class="text-cyber-secondary hover:text-cyber-primary transition-colors text-sm flex items-center gap-2"
    >
      Ver Perfil
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
      </svg>
    </a>
  </div>

  <!-- Stats Loading State -->
  <div id="thm-loading" class="text-center py-8">
    <div class="inline-block animate-spin rounded-full h-12 w-12 border-4 border-cyber-primary border-t-transparent"></div>
    <p class="mt-4 text-cyber-text-dim">Cargando estadísticas<span class="loading"></span></p>
  </div>

  <!-- Stats Content -->
  <div id="thm-stats" class="hidden grid grid-cols-2 md:grid-cols-4 gap-4">
    <!-- Rank -->
    <div class="stat-box bg-cyber-bg-secondary rounded-lg p-4 border border-cyber-primary/30 hover:border-cyber-primary transition-all">
      <div class="text-cyber-text-dim text-sm mb-2">Rank Global</div>
      <div id="thm-rank" class="text-3xl font-bold text-cyber-primary glow-text">-</div>
    </div>

    <!-- Points -->
    <div class="stat-box bg-cyber-bg-secondary rounded-lg p-4 border border-cyber-secondary/30 hover:border-cyber-secondary transition-all">
      <div class="text-cyber-text-dim text-sm mb-2">Puntos Totales</div>
      <div id="thm-points" class="text-3xl font-bold text-cyber-secondary">-</div>
    </div>

    <!-- Rooms Completed -->
    <div class="stat-box bg-cyber-bg-secondary rounded-lg p-4 border border-cyber-accent/30 hover:border-cyber-accent transition-all">
      <div class="text-cyber-text-dim text-sm mb-2">Rooms Completadas</div>
      <div id="thm-rooms" class="text-3xl font-bold text-cyber-accent">-</div>
    </div>

    <!-- Streak -->
    <div class="stat-box bg-cyber-bg-secondary rounded-lg p-4 border border-cyber-warning/30 hover:border-cyber-warning transition-all">
      <div class="text-cyber-text-dim text-sm mb-2">Racha Actual</div>
      <div id="thm-streak" class="text-3xl font-bold text-cyber-warning">-</div>
    </div>
  </div>

  <!-- Badges Section -->
  <div id="thm-badges" class="hidden mt-6 pt-6 border-t border-cyber-primary/20">
    <h3 class="text-lg font-semibold text-cyber-text mb-4">Últimas Insignias</h3>
    <div id="thm-badges-grid" class="grid grid-cols-3 md:grid-cols-6 gap-4">
      <!-- Badges will be loaded here -->
    </div>
  </div>

  <!-- Error State -->
  <div id="thm-error" class="hidden text-center py-8">
    <div class="text-cyber-accent text-5xl mb-4">⚠️</div>
    <p class="text-cyber-text-dim">No se pudieron cargar las estadísticas</p>
    <p class="text-sm text-cyber-text-dim mt-2">Verifica la configuración del usuario</p>
  </div>
</div>

<script define:vars={{ username }}>
  // TryHackMe API endpoint (usando proxy CORS o endpoint público)
  async function loadTryHackMeStats() {
    const loading = document.getElementById('thm-loading');
    const statsDiv = document.getElementById('thm-stats');
    const badgesDiv = document.getElementById('thm-badges');
    const errorDiv = document.getElementById('thm-error');

    try {
      // Nota: TryHackMe no tiene una API pública oficial
      // Esta es una implementación de ejemplo usando web scraping o proxy
      // Puedes usar servicios como https://tryhackme.com/api/user/public-profile?username=
      
      const response = await fetch(`https://tryhackme.com/api/user/public-profile?username=${username}`);
      
      if (!response.ok) {
        throw new Error('Failed to fetch data');
      }

      const data = await response.json();

      // Actualizar estadísticas
      if (data) {
        document.getElementById('thm-rank').textContent = data.userRank?.toLocaleString() || '-';
        document.getElementById('thm-points').textContent = data.points?.toLocaleString() || '-';
        document.getElementById('thm-rooms').textContent = data.roomsCompleted || '-';
        document.getElementById('thm-streak').textContent = `${data.streak || 0} días`;

        // Mostrar stats
        if (loading) loading.classList.add('hidden');
        if (statsDiv) statsDiv.classList.remove('hidden');

        // Cargar badges si existen
        if (data.badges && data.badges.length > 0) {
          const badgesGrid = document.getElementById('thm-badges-grid');
          if (badgesGrid) {
            badgesGrid.innerHTML = data.badges.slice(0, 6).map(badge => `
              <div class="badge-item text-center" title="${badge.name}">
                <img src="${badge.imageUrl}" alt="${badge.name}" class="w-16 h-16 mx-auto rounded-lg border border-cyber-primary/30 hover:border-cyber-primary transition-all hover:scale-110" />
                <p class="text-xs text-cyber-text-dim mt-2 truncate">${badge.name}</p>
              </div>
            `).join('');
          }
          if (badgesDiv) badgesDiv.classList.remove('hidden');
        }
      }
    } catch (error) {
      console.error('Error loading TryHackMe stats:', error);
      
      // Mostrar datos de ejemplo en caso de error
      // Esto permite que el sitio funcione incluso sin la API
      document.getElementById('thm-rank').textContent = '-';
      document.getElementById('thm-points').textContent = '-';
      document.getElementById('thm-rooms').textContent = '-';
      document.getElementById('thm-streak').textContent = '- días';
      
      if (loading) loading.classList.add('hidden');
      if (statsDiv) statsDiv.classList.remove('hidden');
      
      // Opcional: mostrar error
      // if (errorDiv) errorDiv.classList.remove('hidden');
      // if (loading) loading.classList.add('hidden');
    }
  }

  // Cargar stats cuando el DOM esté listo
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', loadTryHackMeStats);
  } else {
    loadTryHackMeStats();
  }
</script>

<style>
  .stat-box {
    transition: all 0.3s ease;
  }

  .stat-box:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0, 255, 65, 0.2);
  }

  .badge-item img {
    filter: drop-shadow(0 0 10px rgba(0, 255, 65, 0.3));
  }
</style>
